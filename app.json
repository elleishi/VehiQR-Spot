{
  "expo": {
    "name": "VehiQR-Spot",
    "slug": "VehiQR-Spot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-vehiqrspot.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/icon-splashscreen.png",
      "resizeMode": "contain",
      "backgroundColor": "#314026"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-vehiqrspot.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/images/icon-vehiqrspot.png"
    },
    "plugins": [
      "expo-router",

      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]

    ]
  }
}
